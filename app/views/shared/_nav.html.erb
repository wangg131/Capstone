<% if flash[:error] %>
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <%= flash[:error] %>
  </div>
<% end %>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <li><i class="fa fa-home fa-5x inline"></i><h1 class="inline logo-text">RoomService</h1></li>
        <ul class="nav navbar-nav" style="float: right">
          <% if @user && session[:user_id] %>
              <% if @user.post %>
            <li><%= link_to "Roommate Search", profiles_path, class: "search-roomies" %></li>
              <% elsif @user.profile%>
            <li><%= link_to "Search for Rooms", posts_path, class: "search-roomies" %></li>
            <% end %>
            <li><%= link_to "Matches", matches_path , method: :get, class: "" %></li>
            <li><%= link_to "Account", user_path(@user.id), method: :get , class: ""%></li>
            <li><%= link_to "Logout", logout_path , method: :delete, class: "" %></li>
          <% else %>
            <li><%= link_to "Sign Up!", signup_path, class: "" %></li>
            <li><%= link_to "Log In!", login_path, class: "" %></li>
          <% end %>
      </ul>

    </div>
  </div>
</div>

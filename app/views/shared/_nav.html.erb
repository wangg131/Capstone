    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <%= flash[:error] %>
  </div>
<% end %>


<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <h1><span class="glyphicon glyphicon-home">RoomService</span></h1>
    </div>

  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
       <ul class="nav navbar-nav navbar-right">
        <% if @user && session[:user_id] %>
            <% if @user.post %>
          <li><%= link_to "Roommate Search", profiles_path, class: "search-roomies" %></li>
            <% elsif @user.profile%>
          <li><%= link_to "Search for Rooms", posts_path, class: "search-roomies" %></li>
          <% end %>
          <li><%= link_to "Matches", matches_path , method: :get, class: "search-roomies" %></li>
          <li><%= link_to "Account", user_path(@user.id), method: :get , class: "search-roomies"%></li>
          <li><%= link_to "Logout", logout_path , method: :delete, class: "search-roomies" %></li>
        <% else %>
          <li><%= link_to "Sign Up!", signup_path, class: "search-roomies" %></li>
          <li><%= link_to "Log In!", login_path, class: "search-roomies" %></li>
        <% end %>
      </ul>
      </li>
    </ul>

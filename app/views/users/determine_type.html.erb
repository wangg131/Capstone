<div class="row">
  <div class="login-form col-md-4 col-md-offset-4">
    <h3>What Are You Here For?</h3>
    <%= form_for @user, url: user_type_path do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.label :user_type, "User Type" %><small> | Required</small><br>
          <%= f.select :user_type, ([["I am looking for a room", "seeker"],
          ["I have an available room", "host"]]), class: "form-control", include_blank: ''%>
        </div>
      </fieldset>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

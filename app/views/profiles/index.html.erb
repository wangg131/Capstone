<div class="row whole">
  <div class="col-md-6 col-md-offset-3" style="text-align:center">
    <% @profiles.each do |profile| %>
      <div class="profile" style="display: none" id= <%= profile.id %> >
        <h1 class="profile_header"><%= profile.user.name %> | <small> <%=  profile.title %></small></h1>
        <h3>About Me:</h3>
          <h4><%= profile.description %></h4><br>

        <h3>Looking For:</h3>
          <h4>Neighborhood: <%= JSON.parse(profile.neighborhoods).join(",   ")%>
          </h4>
          <h4># of Rooms Needed: <%= profile.rooms_needed %></h4>
          <h4>Bathroom: <%= JSON.parse(profile.bathroom_type).join(",   ") %></h4>
          <h4>Laundry: <%= JSON.parse(profile.laundry).join(",   ") %></h4>
          <h4>Parking: <%= JSON.parse(profile.parking).join(",   ") %></h4>

          <i class="fa fa-check-circle fa-5x yes-profile"></i><i class="fa fa-times-circle fa-5x no-profile"></i>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-4">
      <h2 class="you" style="text-align:center">We apologize, but there are no new potential roommates at this time.<br><br><%= link_to "Home Page", user_path(@user.id), method: :get %></h2>
    </div>
  </div>

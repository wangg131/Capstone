<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3>Search Preferences</h3>
    <p> Complete the fields below for your housing search preferences. Multiple selections for each
      category are allowed. Only housing posts that match your desired criteria will be searchable and
      you can edit your preferences whenever you want.</p>

    <%= form_for @profile, url: new_profile_path do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.label :title, "Profile Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Describe Yourself" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :house_type, "Desired Housing Type(s)" %>
          <%= f.select :house_type, options_for_select(@housing_types),
          {include_hidden: false}, {:multiple => true, class: "chzn-select form-control"} %>
        </div>
        <div class="form-group col-md-4 col-md-offset-1">
          <%= f.label :rooms_needed, "Quanity Rooms Needed", class: ".sr-only" %>
          <%= f.text_field :rooms_needed, class: "form-control" %>
        </div>
        <div class="form-group col-md-4 col-md-offset-1">
          <%= f.label :max_roommates, "Max Housemates" %>
          <%= f.text_field :max_roommates, class: "form-control" %>
        </div>
        <div class="form-group col-md-4 col-md-offset-1">
          <%= f.label :min_price, "Min Price" %>
          <%= f.text_field :min_price, class: "form-control" %>
        </div>
        <div class="form-group col-md-4 col-md-offset-1">
          <%= f.label :max_price, "Max Price" %>
          <%= f.text_field :max_price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :neighborhoods, "Seattle Neighborhoods" %>
          <%= f.select :neighborhoods, grouped_options_for_select(@neighborhoods),
          {include_hidden: false}, {:multiple => true, class: "chzn-select form-control select"} %>
        </div>
        <div class="form-group">
          <%= f.label :bathroom_type, "Bathroom Type(s)" %>
          <%= f.select :bathroom_type, options_for_select(["Private", "Shared"]),
          {include_hidden: false}, {:multiple => true, class: "chzn-select form-control"} %>
        </div>
      </form>
        <div class="form-group">
          <%= f.label :laundry, "Washer & Dryer" %>
          <%= f.select :laundry, options_for_select(["In-unit", "On-site", "In-building"]), {include_hidden: false}, {:multiple => true, class: "chzn-select form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :parking, "Parking" %>
          <%= f.select :laundry, options_for_select(["Street", "Garage"]), {include_hidden: false}, {:multiple => true, class: "chzn-select form-control"} %>
        </div>
      <%= f.submit "Add Preferences", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<!DOCTYPE html>
<html>
<head>
  <title>Capstone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<div class="container-fluid">
  <body>
    <header>
      <div class="row">
        <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
          <div class="logo">
            <h1>RoomService</h1>
          </div>
        </div>
      </div>

      <% if session[:user_id] %>
        <div class="account-buttons">
          <%= link_to "Logout", logout_path , method: :delete, class: "btn btn-default pull-right" %>
        </div>

      <% else %>
        <div class="account-buttons">
          <%= link_to "Log In!", login_path, class: "btn btn-default pull-right" %>
          <%= link_to "Sign Up!", signup_path, class: "btn btn-default pull-right" %>
        </div>
      <% end %>
    </header>

    <nav class="navbar navbar-default">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">

        <a class="navbar-brand" href="/"><span class="glyphicon" aria-hidden="true"></span></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Woo <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><h3>woah dropdown</h3></li>
              <li role="separator" class="divider"></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if session[:user_id] %>
            <li><p class="navbar-text">Welcome, <%= @user_name %></p></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>

  </body>
</div>
</html>
